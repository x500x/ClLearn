<Rule
      Name="LinuxRemoteBuild"
      DisplayName="Remote Build"
      PageTemplate="generic"
      Description="Remote Build"
      SwitchPrefix="/"
      Order="100"
      xmlns="http://schemas.microsoft.com/build/2009/properties">
  <Rule.Categories>
    <Category Name="General" DisplayName="General" Description="General" />
  </Rule.Categories>
  <Rule.DataSource>
    <DataSource Persistence="ProjectFile" />
  </Rule.DataSource>
  <StringProperty Name="RemoteBuildCommandLine" DisplayName="Build Command Line"
                  Description="Specifies the command line to run for the 'Build' command. This is executed on the remote system."
                  IncludeInCommandLine="false"
                  Category="General"
                  F1Keyword="VC.Project.VCNMakeTool.BuildCommandLine">
    <StringProperty.ValueEditors>
      <ValueEditor EditorType="DefaultCommandPropertyEditor" DisplayName="&lt;Edit...&gt;"/>
    </StringProperty.ValueEditors>
  </StringProperty>
  <StringProperty Name="RemoteReBuildCommandLine" DisplayName="Rebuild All Command Line"
                  Description="Specifies the command line to run for the 'Rebuild All' command. This is executed on the remote system."
                  IncludeInCommandLine="false"
                  Category="General"
                  F1Keyword="VC.Project.VCNMakeTool.ReBuildCommandLine">
    <StringProperty.ValueEditors>
      <ValueEditor EditorType="DefaultCommandPropertyEditor" DisplayName="&lt;Edit...&gt;"/>
    </StringProperty.ValueEditors>
  </StringProperty>
  <StringProperty Name="RemoteCleanCommandLine" DisplayName="Clean Command Line"
                  Description="Specifies the command line to run for the 'Clean' command. This is executed on the remote system."
                  IncludeInCommandLine="false"
                  Category="General"
                  F1Keyword="VC.Project.VCNMakeTool.CleanCommandLine">
    <StringProperty.ValueEditors>
      <ValueEditor EditorType="DefaultCommandPropertyEditor" DisplayName="&lt;Edit...&gt;"/>
    </StringProperty.ValueEditors>
  </StringProperty>
  <StringListProperty Name="RemoteBuildOutputs" DisplayName="Outputs"
                  Description="Specifies the outputs generated by the remote build on the remote system."
                  Category="General"
                  IncludeInCommandLine="false"
                  F1Keyword="VC.Project.VCNMakeTool.Output"/>
  <StringListProperty Subtype="folder" Name="ProjectPublicIncludePath" DisplayName="Project Public Include Directories" Description="Specifies one or more directories to be passed to referring projects; separate with semi-colons if more than one." IncludeInCommandLine="false" Category="General" F1Keyword="VC.Project.VCClangCompilerTool.AdditionalPublicIncludeDirectories" />
</Rule>
