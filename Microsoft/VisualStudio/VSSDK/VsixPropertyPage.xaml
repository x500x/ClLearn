<Rule Name="VSIX"
      Description="Specifies the project's application settings and properties (VSIX)."
      DisplayName="VSIX"
      PageTemplate="generic"
      Order="1400"
      xmlns="http://schemas.microsoft.com/build/2009/properties">

    <Rule.DataSource>
        <DataSource Persistence="ProjectFileWithInterception"
                    SourceOfDefaultValue="AfterContext"
                    HasConfigurationCondition="False" />
    </Rule.DataSource>

    <BoolProperty Name="CreateVsixContainer"
                  DisplayName="VSIX Container"
                  Description="Create VSIX Container during build."
                  Category="General">
    </BoolProperty>

    <StringProperty Name="CopyVsixExtensionLocation"
                    DisplayName="Copy VSIX content"
                    Description="Destination directory to copy VSIX content during build."
                    Category="General"
                    Subtype="directory"/>
</Rule>