<Rule Name="LocalDebugger" DisplayName="開始" PageTemplate="debugger" Description="本機偵錯工具選項" xmlns="http://schemas.microsoft.com/build/2009/properties">

    <Rule.DataSource>
        <DataSource Persistence="UserFile"/>
    </Rule.DataSource>

    <Rule.Categories>
        <Category Name="StartOptions" DisplayName="起始選項" Description="起始選項"/>
    </Rule.Categories>

    <EnumProperty Name="DebuggerType" DisplayName="偵錯工具類型" Category="StartOptions" Description="指定要啟用哪個偵錯工具。設為 [混合] 時，會針對受控碼及機器碼使用偵錯工具。設為 [機器碼加指令碼] 時，會針對機器碼和指令碼使用偵錯工具。">
        <EnumValue Name="NativeOnly" DisplayName="僅限機器碼" Description="僅限機器碼"/>
        <EnumValue Name="ManagedOnly" DisplayName="僅限受控" Description="僅限受控"/>
        <EnumValue Name="Script" DisplayName="僅限指令碼" Description="僅限指令碼"/>
        <EnumValue Name="NativeWithScript" DisplayName="機器碼加指令碼" Description="機器碼加指令碼"/>
        <EnumValue Name="Mixed" DisplayName="混合 (受控碼和機器碼)" Description="混合 (受控碼和機器碼)"/>
        <EnumProperty.Metadata>
            <NameValuePair Name="IsDebugType" Value="true"/>
        </EnumProperty.Metadata>
    </EnumProperty>
</Rule>
